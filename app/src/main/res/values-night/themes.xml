    <style name="Theme.BDKWallet" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/bitcoin_orange</item>
        <item name="colorPrimaryVariant">@color/bitcoin_orange</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/bitcoin_orange</item>
        <item name="colorSecondaryVariant">@color/bitcoin_orange</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:drawableTint">?colorOnPrimary</item>
    </style>
</resources>